<model>
    <mount>//OPNsense/DeviceMonitor</mount>
    <description>Device Monitor Configuration</description>
    <version>1.0.0</version>
    <items>
        <general>
            <enabled type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </enabled>
            <email type="EmailField">
                <Required>N</Required>
                <ValidationMessage>Please enter a valid email address</ValidationMessage>
            </email>
            <scan_interval type="IntegerField">
                <default>300</default>
                <MinimumValue>60</MinimumValue>
                <MaximumValue>3600</MaximumValue>
                <Required>Y</Required>
            </scan_interval>
           <show_domain type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </show_domain>
        </general>
    </items>
</model>
